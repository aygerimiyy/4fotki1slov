<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".MainActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#223760"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_coin_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/text_ochko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/img_level"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_level"
        app:layout_constraintEnd_toEndOf="@id/img_level"
        app:layout_constraintStart_toStartOf="@id/img_level"
        app:layout_constraintTop_toTopOf="@id/img_level" />

    <LinearLayout
        android:id="@+id/linear_pics"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_pic1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:padding="5dp"
                android:src="@drawable/photo1_1" />

            <ImageView
                android:id="@+id/img_pic2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:padding="5dp"
                android:src="@drawable/photo1_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_pic3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:padding="5dp"
                android:src="@drawable/photo1_3"
                />

            <ImageView
                android:id="@+id/img_pic4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_image"
                android:padding="5dp"
                android:src="@drawable/photo1_4" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/big_overplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3090808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_shine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/success_ray_blue"
        app:layout_constraintBottom_toBottomOf="@id/ll_1" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline">

        <LinearLayout
            android:id="@+id/ll_answers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="8">
            <TextView
                android:id="@+id/answer_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/answer_5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:elevation="12dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_btns"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:weightSum="6">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:weightSum="6">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn11"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn12"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:elevation="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_btn_bg"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/tv_text_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:elevation="1dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintTop_toTopOf="@id/btn_next" />
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/linear_pics"
        app:layout_constraintEnd_toEndOf="@id/linear_pics"
        app:layout_constraintTop_toTopOf="@id/linear_pics"
        app:layout_constraintBottom_toBottomOf="@id/linear_pics"
        android:elevation="1dp"
        tools:ignore="NotSibling" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>